{
  "name": "webapp-fe",
  "version": "1.0.0",
  "description": "Front-end starter kit for web applications",
  "license": "UNLICENSED",
  "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
  "repository": "https://github.com/damianobarbati/webapp-fe",
  "type": "module",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore --fix",
    "test": "NODE_ENV=test API_MOCKED=1 jest",
    "test:e2e": "NODE_ENV=test API_MOCKED=1 DEBUG=pw:webserver playwright test",
    "check": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "build": "PARCEL_BUNDLE_ANALYZER=1 yarn build:${NODE_ENV:-development}",
    "build:test": "NODE_ENV=development API_MOCKED=1 parcel src/index.html --no-cache -p 80",
    "build:development": "NODE_ENV=development API_MOCKED=1 parcel src/index.html --no-cache -p 80",
    "build:staging": "NODE_ENV=staging parcel API_MOCKED=1 build src/index.html --no-cache --detailed-report=1000",
    "build:production": "NODE_ENV=production parcel build src/index.html --no-cache --detailed-report=1000",
    "lighthouse": "lighthouse http://localhost --quiet --chrome-flags='--headless' --output=html --output-path=lh-report.html --budget-path=budget.json --formFactor=desktop --no-'screenEmulation.mobile' --screenEmulation.width=1280 --screenEmulation.height=600 --screenEmulation.deviceScaleFactor=2",
    "lighthouse:authed": "node ./lighthouse.js http://localhost/app/profile --login --quiet --output=html --output-path=lh-report.html --budget-path=budget.json --formFactor=desktop --no-'screenEmulation.mobile' --screenEmulation.width=1280 --screenEmulation.height=600 --screenEmulation.deviceScaleFactor=2",
    "serve": "npx serve@13 --config=../serve.json -p 80 -C -s ./dist"
  },
  "multipleStaticFileCopier": [
    {
      "origin": "assets/robots.txt",
      "destination": "dist/robots.txt"
    },
    {
      "origin": "assets",
      "destination": "dist/assets"
    }
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.2",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "jwt-decode": "^3.1.2",
    "jwt-encode": "^1.0.1",
    "lodash-es": "^4.17.21",
    "miragejs": "^0.1.45",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.32.1",
    "react-jss": "^10.9.0",
    "react-query": "^3.39.1",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "recharts": "^2.1.10",
    "tailwindcss": "^3.1.3",
    "typeface-muli": "^1.1.13"
  },
  "devDependencies": {
    "@parcel/reporter-bundle-analyzer": "^2.6.0",
    "@playwright/test": "^1.22.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "axios-logger": "^2.6.1",
    "babel-jest": "^28.1.1",
    "eslint-config-xs": "^1.2.1",
    "eslint-plugin-jest-playwright": "^0.9.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-preview": "^0.2.4",
    "lighthouse": "^9.6.2",
    "parcel": "^2.6.0",
    "parcel-reporter-multiple-static-file-copier": "^1.0.5",
    "playwright": "^1.22.2",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "process": "^0.11.10",
    "puppeteer": "^14.4.0",
    "sharp": "^0.29.1",
    "tsc": "^2.0.4"
  }
}
